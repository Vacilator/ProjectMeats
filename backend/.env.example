# ProjectMeats Backend Environment Configuration
# Copy to .env and update with your specific values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For development with SQLite (default)
DATABASE_URL=sqlite:///db.sqlite3

# For production with PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/projectmeats

# CORS Settings (for React frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Configuration
API_VERSION=v1

# Email Configuration (for future notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password

# File Upload Settings
MEDIA_ROOT=media/
STATIC_ROOT=static/

# Logging Level
LOG_LEVEL=INFO

# Cache Configuration (Redis for production)
# CACHE_URL=redis://localhost:6379/1

# Security Settings (production)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True