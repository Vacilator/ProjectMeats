# ProjectMeats Production Environment Configuration Template
# Copy this file to backend/.env and update the values for your production environment

# ==========================================
# DJANGO CORE SETTINGS
# ==========================================

# Set to False in production
DEBUG=False

# Generate a strong secret key using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-production-key-change-this

# Add your domain(s) and IP addresses
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# PostgreSQL production database
DATABASE_URL=postgresql://projectmeats_user:your_secure_password@localhost:5432/projectmeats_prod

# For development with SQLite (comment out in production)
# DATABASE_URL=sqlite:///db.sqlite3

# ==========================================
# SECURITY SETTINGS
# ==========================================

# SSL/HTTPS Configuration
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Security Headers
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# Cookie Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Strict

# ==========================================
# CORS CONFIGURATION
# ==========================================

# Frontend domains (React app)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Additional CORS settings
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOWED_HEADERS=accept,accept-encoding,authorization,content-type,dnt,origin,user-agent,x-csrftoken,x-requested-with

# ==========================================
# FILE STORAGE
# ==========================================

# Local file storage paths
MEDIA_ROOT=/home/projectmeats/uploads
STATIC_ROOT=/home/projectmeats/app/backend/staticfiles

# AWS S3 Configuration (optional - uncomment if using S3)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain
# DEFAULT_FILE_STORAGE=storages.backends.s3boto3.S3Boto3Storage
# STATICFILES_STORAGE=storages.backends.s3boto3.S3StaticStorage

# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# Email backend for production
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Configuration (update with your provider)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password

# Default from email
DEFAULT_FROM_EMAIL=ProjectMeats <noreply@yourdomain.com>
SERVER_EMAIL=ProjectMeats Server <server@yourdomain.com>

# ==========================================
# CACHE CONFIGURATION
# ==========================================

# Redis cache configuration (recommended for production)
CACHE_URL=redis://localhost:6379/1

# Session storage
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default

# ==========================================
# LOGGING CONFIGURATION
# ==========================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file paths
LOG_DIR=/home/projectmeats/logs

# ==========================================
# API CONFIGURATION
# ==========================================

# API version
API_VERSION=v1

# Rate limiting
API_THROTTLE_RATE_ANON=100/hour
API_THROTTLE_RATE_USER=1000/hour

# ==========================================
# MONITORING & ANALYTICS
# ==========================================

# Sentry error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics (optional)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXX-X

# ==========================================
# BACKUP CONFIGURATION
# ==========================================

# Backup directory
BACKUP_DIR=/home/projectmeats/backups

# Database backup retention (days)
DB_BACKUP_RETENTION_DAYS=30

# Full backup retention (days)
FULL_BACKUP_RETENTION_DAYS=7

# ==========================================
# BUSINESS CONFIGURATION
# ==========================================

# Company Information
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=+1-XXX-XXX-XXXX
COMPANY_EMAIL=info@yourdomain.com

# Time Zone
TIME_ZONE=America/New_York

# Default Currency
DEFAULT_CURRENCY=USD

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable/disable features
ENABLE_USER_REGISTRATION=False
ENABLE_EMAIL_VERIFICATION=True
ENABLE_TWO_FACTOR_AUTH=False
ENABLE_API_DOCS=True

# ==========================================
# THIRD-PARTY INTEGRATIONS
# ==========================================

# PowerApps Migration
POWERAPPS_MIGRATION_MODE=False

# External API Keys (if needed)
# EXTERNAL_API_KEY=your-external-api-key
# PAYMENT_GATEWAY_KEY=your-payment-gateway-key

# ==========================================
# DEVELOPMENT OVERRIDES
# ==========================================
# Uncomment these for development/staging environments

# DEBUG=True
# SECURE_SSL_REDIRECT=False
# SESSION_COOKIE_SECURE=False
# CSRF_COOKIE_SECURE=False
