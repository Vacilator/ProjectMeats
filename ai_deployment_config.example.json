{
  "version": "1.0",
  "created": "2024-01-01T00:00:00Z",
  "description": "Example configuration for AI Deployment Orchestrator",
  
  "ssh": {
    "port": 22,
    "timeout": 30,
    "key_filename": null,
    "password": null
  },
  
  "deployment": {
    "max_retries": 3,
    "retry_delay": 5,
    "command_timeout": 300,
    "auto_approve": false,
    "auto_recovery": true,
    "backup_on_failure": true,
    "rollback_enabled": true
  },
  
  "ai_features": {
    "intelligent_error_detection": true,
    "auto_fix_common_issues": true,
    "learn_from_failures": true,
    "share_anonymized_metrics": false,
    "predictive_scaling": false,
    "optimization_suggestions": true
  },
  
  "server_profiles": {
    "development": {
      "hostname": "dev.example.com",
      "username": "deploy",
      "domain": "dev.myapp.com",
      "use_password": false,
      "key_file": "~/.ssh/id_ed25519",
      "specs": {
        "cpu_cores": "2",
        "memory_gb": "4",
        "storage_gb": "50"
      }
    },
    "staging": {
      "hostname": "staging.example.com", 
      "username": "root",
      "domain": "staging.myapp.com",
      "use_password": false,
      "key_file": "~/.ssh/id_ed25519",
      "specs": {
        "cpu_cores": "4",
        "memory_gb": "8",
        "storage_gb": "100"
      }
    },
    "production": {
      "hostname": "prod.example.com",
      "username": "root",
      "domain": "myapp.com",
      "use_password": false,
      "key_file": "~/.ssh/id_ed25519", 
      "specs": {
        "cpu_cores": "8",
        "memory_gb": "16",
        "storage_gb": "200"
      }
    }
  },
  
  "logging": {
    "level": "INFO",
    "max_files": 10,
    "max_size": "50MB",
    "structured_logging": true,
    "console_output": true
  },
  
  "monitoring": {
    "enable_real_time": true,
    "health_checks": true,
    "performance_metrics": true,
    "alert_on_failure": true
  },
  
  "security": {
    "verify_ssl": true,
    "enable_firewall": true,
    "backup_keys": true,
    "audit_logging": true
  },
  
  "recovery_strategies": {
    "nodejs_conflicts": {
      "priority": 1,
      "timeout": 600,
      "fallback_methods": ["snap", "manual_install"]
    },
    "package_conflicts": {
      "priority": 2,
      "timeout": 300,
      "fallback_methods": ["apt_update", "dpkg_reconfigure"]
    },
    "permission_issues": {
      "priority": 3,
      "timeout": 60,
      "fallback_methods": ["chown_recursive", "chmod_fix"]
    }
  },
  
  "notifications": {
    "enabled": false,
    "webhook_url": "",
    "slack_channel": "",
    "email_recipients": []
  }
}