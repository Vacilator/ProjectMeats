# ProjectMeats Production Environment Configuration
# This file addresses the authentication issue on meatscentral.com

# Database - Production PostgreSQL
POSTGRES_DB=projectmeats_prod
POSTGRES_USER=projectmeats_user
POSTGRES_PASSWORD=ProjectMeats2024SecurePassword!
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgres://projectmeats_user:ProjectMeats2024SecurePassword!@localhost:5432/projectmeats_prod

# Django Core Settings
DJANGO_SECRET_KEY=change-this-to-a-secure-secret-key-in-production
SECRET_KEY=change-this-to-a-secure-secret-key-in-production
DEBUG=False

# Host Configuration - Critical for fixing authentication issue
ALLOWED_HOSTS=meatscentral.com,www.meatscentral.com,localhost,127.0.0.1,0.0.0.0

# CORS Configuration - Critical for frontend API calls
CORS_ALLOWED_ORIGINS=https://meatscentral.com,https://www.meatscentral.com,http://meatscentral.com,http://www.meatscentral.com

# CSRF Configuration - Critical for form submissions and authentication
CSRF_TRUSTED_ORIGINS=https://meatscentral.com,https://www.meatscentral.com,http://meatscentral.com,http://www.meatscentral.com

# Frontend Configuration
REACT_APP_API_BASE_URL=https://meatscentral.com/api/v1

# Security Settings for Production
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Logging
LOG_LEVEL=INFO

# Session Configuration
SESSION_COOKIE_DOMAIN=.meatscentral.com
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CSRF Cookie Configuration
CSRF_COOKIE_DOMAIN=.meatscentral.com
CSRF_COOKIE_HTTPONLY=False
CSRF_COOKIE_SAMESITE=Lax