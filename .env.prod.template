# ProjectMeats Production Environment Configuration
# Docker deployment with industry best practices

# Domain Configuration
DOMAIN=your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database Configuration (PostgreSQL)
POSTGRES_DB=projectmeats
POSTGRES_USER=projectmeats
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password

# Django Configuration  
DJANGO_SECRET_KEY=your-secure-django-secret-key
DEBUG=False

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOW_CREDENTIALS=True

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Monitoring (Optional)
GRAFANA_PASSWORD=your-grafana-admin-password

# Company Information
COMPANY_NAME=ProjectMeats
COMPANY_EMAIL=info@your-domain.com
COMPANY_PHONE=+1-555-0123
COMPANY_ADDRESS=123 Business St, City, State 12345