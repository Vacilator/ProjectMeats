# ProjectMeats Frontend Production Environment Configuration
# Copy this file to frontend/.env.production and update the values

# ==========================================
# API CONFIGURATION
# ==========================================

# Backend API base URL (your production Django server)
REACT_APP_API_BASE_URL=https://api.yourdomain.com/api/v1

# Alternative if API is on same domain
# REACT_APP_API_BASE_URL=https://yourdomain.com/api/v1

# ==========================================
# ENVIRONMENT SETTINGS
# ==========================================

# Environment identifier
REACT_APP_ENVIRONMENT=production

# Application version (optional)
REACT_APP_VERSION=1.0.0

# ==========================================
# BRANDING & COMPANY INFO
# ==========================================

# Application title
REACT_APP_TITLE=ProjectMeats

# Company information
REACT_APP_COMPANY_NAME=Your Company Name
REACT_APP_COMPANY_WEBSITE=https://yourdomain.com

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable/disable features in production
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_TRACKING=true

# ==========================================
# ANALYTICS & MONITORING
# ==========================================

# Google Analytics (optional)
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXX-X

# Sentry error tracking (optional)
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==========================================
# EXTERNAL SERVICES
# ==========================================

# CDN URL for assets (optional)
# REACT_APP_CDN_URL=https://cdn.yourdomain.com

# External integrations
# REACT_APP_MAPS_API_KEY=your-maps-api-key
# REACT_APP_PAYMENT_GATEWAY_KEY=your-payment-gateway-public-key

# ==========================================
# SECURITY SETTINGS
# ==========================================

# Content Security Policy (optional)
REACT_APP_CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================

# Build optimization
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# Bundle analyzer (set to true to analyze bundle size)
ANALYZE_BUNDLE=false

# ==========================================
# DEVELOPMENT OVERRIDES
# ==========================================
# Uncomment these for development/staging environments

# REACT_APP_API_BASE_URL=http://localhost:8000/api/v1
# REACT_APP_ENVIRONMENT=development
# REACT_APP_ENABLE_DEBUG_MODE=true
# GENERATE_SOURCEMAP=true