{
  "dashboard": {
    "id": null,
    "title": "ProjectMeats Production Dashboard",
    "tags": ["projectmeats", "production"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Application Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"django\"}",
            "legendFormat": "Backend Health"
          },
          {
            "expr": "up{job=\"nginx\"}",
            "legendFormat": "Frontend Health"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Database Connections",
        "type": "graph", 
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"projectmeats\"}",
            "legendFormat": "Active Connections"
          }
        ]
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(nginx_http_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ]
      },
      {
        "id": 4,
        "title": "Container Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"projectmeats-.*\"} / 1024 / 1024",
            "legendFormat": "{{ name }}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(django_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(django_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "schemaVersion": 27
  }
}